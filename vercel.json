{
  "redirects": [
    {
      "source": "/:path((?!app-ads\\.txt$).*)",
      "has": [
        {
          "type": "host",
          "value": "www.mysmartrep.com"
        }
      ],
      "destination": "https://mysmartrep.com/:path",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/app-ads.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, s-maxage=3600"
        }
      ]
    }
  ]
}

